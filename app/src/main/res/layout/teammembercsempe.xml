<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Headerbg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_teammemberid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center_vertical"
            android:text="@string/id"
            android:textColor="@color/NormaltextColor"
            android:background="@color/Headerbg"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_memberusername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/Headertext"
            android:text="Username"
            android:background="@color/Headerbg"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_teammemberskillpoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/Headerbg"
            android:gravity="center_vertical"
            android:text="Sp: 0"
            android:textAlignment="textStart"
            android:textColor="@color/NormaltextColor" />

        <ImageButton
            android:id="@+id/ib_addfriend"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/greenbuttonshape"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_account_box" />
    </LinearLayout>
</FrameLayout>