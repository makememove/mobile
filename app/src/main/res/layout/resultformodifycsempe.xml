<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Headerbg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_resultmodifyposition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/Headerbg"
            android:gravity="center_vertical"
            android:text="ID"
            android:textAlignment="center"
            android:textColor="@color/NormaltextColor"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/Headerbg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_resultmodifyteamname"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_margin="2dp"
                android:background="@color/Headerbg"
                android:gravity="center_vertical"
                android:text="Teamname"
                android:textAlignment="center"
                android:textColor="@color/Headertext"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_resultmodifyskillpoint"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_margin="2dp"
                android:background="@color/Headerbg"
                android:gravity="center_vertical"
                android:text="team skillpoint"
                android:textAlignment="center"
                android:textColor="@color/NormaltextColor"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@color/Headerbg"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_resultmodifyup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/Headerbg"
                app:srcCompat="@drawable/ic_arrow_upward_black_24dp" />

            <ImageButton
                android:id="@+id/ib_resultmodifydown"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/Headerbg"
                app:srcCompat="@drawable/ic_arrow_downward_black_24dp" />
        </LinearLayout>

    </LinearLayout>
</android.widget.FrameLayout>