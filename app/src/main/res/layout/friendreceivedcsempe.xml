<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/Headerbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Headerbg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_receivefriendiD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/Headerbg"
            android:gravity="center_vertical"
            android:text="ID"
            android:textAlignment="center"
            android:textColor="@color/NormaltextColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_receivefriendprofile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:background="@color/Headerbg"
            android:src="@drawable/ic_account_box"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_receivefriendusername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:background="@color/Headerbg"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="@color/Headertext"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ib_receiveremoveFriend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.04"
            android:background="@color/Headerbg"
            android:src="@drawable/ic_remove_circle_black_24dp" />

        <ImageButton
            android:id="@+id/ib_receiveacceptfriendrequest"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.3"
            android:background="@color/Headertext"
            android:src="@drawable/ic_person_add_black_24dp" />
    </LinearLayout>
</FrameLayout>