<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#b71c1c</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="timepickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/background</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:background">@color/background</item>
    </style>



    <style name="inputtext" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#757de8</item>
        <item name="colorControlActivated">#b71c1c</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">#818181</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="greenactionbutton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#757de8</item>
        <item name="colorControlActivated">#b71c1c</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#e8f5e9</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">18sp</item>

        <item name="android:typeface">monospace</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/Headertext</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
    </style>

    <style name="DialogTitle">
        <item name="android:background">@color/Headerbg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
